{
  "compilerOptions": {
    "target": "ES2021",
    "useDefineForClassFields": true,
    "lib": ["ES2021", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedParameters": true,

    "paths": {
      "@*": ["./src/*"],
      "@typings/*": ["../typings/*"],
      "@shared/*": ["../shared/*"]
    },
    "types": ["../typings/env"]
  },
  "include": ["src", "../typings"],
  "references": [
    { "path": "./tsconfig.node.json" },
    {
      "path": "../shared"
    }
  ]
}
