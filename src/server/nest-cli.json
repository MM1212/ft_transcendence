{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "typeCheck": true,
    "assets": [
      ".env.*",
      "prisma/schema.prisma"
    ],
    "watchAssets": true
  },
  "entryFile": "server/src/main"
}